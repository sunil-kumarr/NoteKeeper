<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container_linear"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/white_1000"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:id="@+id/question_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white_1000"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="5dp"
                app:cardElevation="5dp" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:padding="@dimen/padding_10"
                        android:text="Add New Question"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/red_500"
                app:layout_constraintTop_toBottomOf="@id/question_header"/>
            <LinearLayout
                android:id="@+id/tips_check_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/question_header"
                android:background="@color/white_1000"
                android:layout_marginTop="5dp"
                android:padding="@dimen/padding_10"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_1000"
                    android:text="Tips on getting good answers quickly"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_1000"
                    android:text="Make sure your question hasn't been asked already"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:layout_margin="2dp"
                    android:drawableLeft="@drawable/ic_checked"
                    android:drawablePadding="@dimen/padding_10"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_1000"
                    android:text="Keep your question short and to the point"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:layout_margin="2dp"
                    android:drawableLeft="@drawable/ic_checked"
                    android:drawablePadding="@dimen/padding_10"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_1000"
                    android:text="Double-check grammar and spelling"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:layout_margin="2dp"
                    android:drawableLeft="@drawable/ic_checked"
                    android:drawablePadding="@dimen/padding_10"/>

            </LinearLayout>
            <TextView
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="@color/grey_200"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/edt_Add_question"
                app:layout_constraintTop_toBottomOf="@id/tips_check_container"/>

            <EditText
                android:id="@+id/edt_Add_question"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@android:color/transparent"
                android:hint="@string/question_hint"
                android:minHeight="200dp"
                android:padding="20dp"
                android:gravity="top|left"
                android:textColor="@color/black"
                android:inputType="textMultiLine"
                android:textColorHint="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:focusedByDefault="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line1" />
            <androidx.cardview.widget.CardView
                android:id="@+id/question_btn_cont"
                android:layout_width="match_parent"
                app:cardElevation="10dp"
                android:elevation="@dimen/padding_10"
                android:background="@color/white_1000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="50dp">
                <Button
                    android:id="@+id/add_question_button"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:layout_margin="@dimen/padding_10"
                    android:textColor="@color/white_1000"
                    android:background="@drawable/add_question_button_bg"
                    android:text="Add"/>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
