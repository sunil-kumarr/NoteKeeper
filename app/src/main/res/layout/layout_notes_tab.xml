        <View
            android:id="@+id/NotesColor"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/blue_500"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/NotesName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:maxLines="2"
            android:text="Operating systems notes"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/NotesAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:maxLines="2"
            android:text="By: Sunil Kumar"
            android:textColor="@color/grey_800"
            app:layout_constraintTop_toBottomOf="@id/NotesName"
            app:layout_constraintStart_toEndOf="@id/guideline"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/NotesType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Type: Handwritten"
            android:textColor="@color/grey_800"
            app:layout_constraintTop_toBottomOf="@id/NotesAuthor"
            app:layout_constraintStart_toEndOf="@id/guideline"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/NotesDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:maxLines="3"
            android:ellipsize="marquee"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="50dp"
            android:text="This is notes description please download our awesome notes"
            android:textColor="@color/grey_800"
            app:layout_constraintTop_toBottomOf="@id/NotesType"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="14sp" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fabSize="mini"
            android:id="@+id/NotesDownloadBtn"
            android:backgroundTint="@color/green_500"
            android:layout_margin="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:rippleColor="@color/yello"
            app:layout_constraintStart_toEndOf="@id/NotesDescription"
            android:src="@drawable/ic_download"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="100dp" />

