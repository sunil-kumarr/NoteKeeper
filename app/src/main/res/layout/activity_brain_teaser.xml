<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:text="Go!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="80sp"
        android:onClick="start"
        android:paddingBottom="50dp"
        android:paddingEnd="50dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:id="@+id/start_button"
        android:paddingStart="50dp"
        android:paddingTop="50dp"
        android:background="@android:color/holo_green_light"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/optionrelativlayout"
        android:visibility="invisible">

        <Button
            android:text="Addition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:onClick="addition"
            android:layout_marginTop="45dp"
            android:id="@+id/addition"
            android:textSize="30sp"
            android:background="@android:color/holo_red_dark"
            android:padding="10sp" />


        <Button
            android:text="Subtraction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:onClick="subtraction"
            android:layout_marginTop="120dp"
            android:id="@+id/subtraction"
            android:textSize="30sp"
            android:background="?attr/colorAccent"
            android:padding="10sp" />



        <Button
            android:text="Multiplication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="multiplication"
            android:layout_centerHorizontal="true"
            android:id="@+id/multiplication"
            android:layout_marginTop="210dp"
            android:textSize="30sp"
            android:background="?android:attr/colorPressedHighlight"
            android:padding="10sp" />

        <Button
            android:text="Division"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="division"
            android:layout_centerHorizontal="true"
            android:id="@+id/division"
            android:layout_marginTop="300dp"
            android:textSize="30sp"
            android:background="?android:attr/colorMultiSelectHighlight"
            android:padding="10sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mathsrelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/optionrelativlayout"
        android:layout_alignBottom="@+id/optionrelativlayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:visibility="invisible">

        <Button
            android:id="@+id/yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:onClick="yes"
            android:padding="10dp"
            android:text="Yes!"
            android:textSize="20sp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:onClick="over"
            android:padding="10dp"
            android:text="No!"
            android:textSize="20sp"
            android:visibility="invisible" />

        <GridLayout
            android:id="@+id/gridlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sumTextView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="36dp">

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@android:color/holo_blue_bright"
                android:onClick="chooseAnswer"
                android:tag="0"
                android:text="1"
                android:textSize="80sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@android:color/holo_blue_dark"
                android:onClick="chooseAnswer"
                android:tag="1"
                android:text="2"
                android:textSize="80sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@android:color/holo_blue_light"
                android:onClick="chooseAnswer"
                android:tag="2"
                android:text="3"
                android:textSize="80sp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:background="@color/colorPrimary"
                android:onClick="chooseAnswer"
                android:tag="3"
                android:text="4"
                android:textSize="80sp" />
        </GridLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignStart="@+id/sumTextView"
            android:layout_marginTop="400dp"
            android:layout_marginRight="100dp"
            app:srcCompat="@drawable/image" />

        <TextView
            android:id="@+id/sumTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/playAgainbutton"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="130dp"
            android:padding="20dp"
            android:text="12+15"
            android:textColor="@android:color/background_dark"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/gridlayout"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10sp"
            android:background="@color/colorAccent"
            android:padding="10dp"
            android:text="0s"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/playagain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/no"
            android:layout_centerHorizontal="true"
            android:background="?android:attr/colorActivatedHighlight"
            android:padding="10dp"
            android:text="Play Again ?"
            android:textColor="@android:color/background_dark"
            android:textColorHighlight="@android:color/background_dark"
            android:textSize="40sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/pointsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/sumTextView"
            android:layout_alignBottom="@+id/sumTextView"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp"
            android:background="@android:color/holo_green_dark"
            android:backgroundTint="@android:color/holo_red_dark"
            android:padding="10dp"
            android:text="0/0"
            android:textColor="@android:color/background_light"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/resulttextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="400dp"
            android:layout_marginBottom="21dp"
            android:textColor="@android:color/background_dark"
            android:textSize="40sp" />

    </RelativeLayout>

</RelativeLayout>
